# Custom configuration
# see
# `ghostty +show-config --default --docs | nvim -R`

font-family = MesloLGS NF

# Disable ligatures
# font-feature = -calt
# font-feature = -liga
# font-feature = -dlig

shell-integration-features = sudo

theme = light:tokyonight-day,dark:tokyonight-storm
macos-titlebar-style = tabs
window-padding-color = extend
copy-on-select = clipboard

# Right option key as alt (meta)
macos-option-as-alt = right

# Quick terminal global keybind
keybind = global:ctrl+grave_accent=toggle_quick_terminal

# Navigate through text with opt/cmd + arrows
keybind = cmd+right=text:\x05
keybind = cmd+left=text:\x01
keybind = alt+left=esc:b
keybind = alt+right=esc:f
